#!/bin/sh /etc/rc.common

START=99
STOP=10

USE_PROCD=1

start_service() {
    # 确保必要的目录存在并可访问
    [ -d /sys/class/hwmon/hwmon0 ] || exit 1
    [ -d /sys/class/hwmon/hwmon1 ] || exit 1

    # 设置正确的权限
    chmod 666 /sys/class/hwmon/hwmon1/pwm1 2>/dev/null
    chmod 444 /sys/class/hwmon/hwmon0/temp1_input 2>/dev/null

    procd_open_instance
    procd_set_param command /bin/sh /usr/bin/fan-control.sh  # 明确使用 /bin/sh 运行
    procd_set_param respawn
    procd_set_param respawn_threshold 3600 5
    procd_set_param stdout 1
    procd_set_param stderr 1
    # 添加工作目录
    procd_set_param file /usr/bin/fan-control.sh
    procd_set_param pidfile /var/run/fan-control.pid
    procd_close_instance
}

stop_service() {
    # 停止时将风扇设为安全速度
    if [ -w /sys/class/hwmon/hwmon1/pwm1 ]; then
        echo 150 > /sys/class/hwmon/hwmon1/pwm1 2>/dev/null
    fi
}

reload_service() {
    stop
    start
}